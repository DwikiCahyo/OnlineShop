<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customCardView" parent="CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:elevation">20dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CustomImageSlider" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="iss_auto_cycle">true</item>
        <item name="iss_delay">0</item>
        <item name="iss_placeholder">@android:color/darker_gray</item>
        <item name="iss_error_image">@android:color/darker_gray</item>
        <item name="iss_selected_dot">@drawable/default_selected_dot</item>
        <item name="iss_unselected_dot">@drawable/default_unselected_dot</item>
        <item name="iss_period">2000</item>
    </style>
</resources>