            android:layout_height="match_parent"
            android:background="@color/shimmer_placeholder"
            android:scaleType="fitXY" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
